<head>
  <title>Produtos</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/stylesheets/produtos.css" />
  <link rel="stylesheet" href="/stylesheets/global.css" />
</head>
<body>
  <%- include('./partials/header') %>
  <div class="container">
    <h1 class="titulo-produtos"><%=name %></h1>
    <section class="produtos-container">
      <section class="produtos">
        <% products.forEach(product=> { %>
        <div class="card">
          <a class="link" href="/produto/<%= product.id%>">
            <img
              class="camisa-imagem"
              src="<%= product.image%>"
              width="300px"
            />
          </a>
          <div class="info-produto">
            <p class="nome-camisa"><%= product.name %></p>
            <span class="preco-camisas"> R$ <%= product.price%> </span>
            <button
            class="btn-comprar-produtos"
            onclick="adicionar({
            id: '<%= product.id  %>',
             name: '<%= product.name %>',
             price: '<%= product.price %>',
             quantity:1,
             size: '<%= product.size %>',
             image:'<%= product.image %>',
     })"
          >
            Comprar
          </button>
          </div>
        </div>
        <% }) %>
      </section>
    </section>
  </div>
  <%- include('./partials/carrinho') %>
  <%- include('./partials/footer') %>
</body>
