<%- include("./partials/head") %>
    <main>
        <h1>Deletar Produto</h1>
        <div>
            <img src="<%= produto.image %>" alt="<%= produto.name %>">
            <p><span>Nome: </span><%= produto.name %></p>
            <p><span>Tamanho: </span><%= produto.size %></p>
            <p><span>Categoria: </span><%= produto.department %></p>
            <p><span>Preço: </span><%= produto.price %></p>
            <p><span>Descrição: </span><%= produto.description %></p>
            <p><span>Status: </span><%= produto.status %></p>
            <p><span>Status: </span><%= produto.inventory %></p>
            <p><span>Status: </span><%= produto.rating %></p>
            <p><span>Última Alteração: </span><%= produto.lastChange %></p>
        </div>
        <form action="/admin-produtos/delete/<%= produto.id %>?_method=delete" method="post">
            <a href="/admin-produtos"><button type="button">Não, voltar!</button></a>
            <button class="accept-button" type="submit">Sim</button>
        </form>
    </main>
<%- include("./partials/footer") %>