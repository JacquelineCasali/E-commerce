<!DOCTYPE html>
<html lang="pt-br">
    <!DOCTYPE html>
    <html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>produton detalhe</title>
        <link rel="stylesheet" href="/stylesheets/produto-detalhe.css">
        <link rel="stylesheet" href="/stylesheets/home.css">
        <link rel="stylesheet" href="./stylesheets/global.css">
    </head>
    <body>  
<body>
    <header>
        <!-- Declaração do botão de menu e do menu oculto -->
        <div class="menu-header">
            <input type="checkbox" id="check">
            <label id="icon" for="check"><img class="img-menuicon" src="./images/menu-icon.svg"> </label>
            <img class="img-search-icon" src="./images/search-icon.svg">
            <div class="nav-bar">
                <a href="./produtos.html" class="section-link">HOMEM</a>
                <a href="./produtos.html" class="section-link">MULHER</a>
                <a href="./produtos.html" class="section-link">MARCAS</a>
                <a href="./produtos.html" class="section-link">NOVO</a>
            </div>
        </div>

        <a href="" class="logo-hearder">
            <img class="img-logo" src="./images/logo.svg">
        </a>
        <div class="icons-header">
            <!-- Usado para conseguir ajustar em telas maiores. Na versão mobile está como ocultado -->
            <img class="img-search-icon2" src="./images/search-icon.svg">

           <div class="user">
                <a href="./painel-usuario.html"><img class="img-person" src="./images/person-circle.svg"></a>
                <div class="user-link">
                    <a href="./login.html">Login</a>
                    <a href="./cadastro.html">Cadastro</a>
                </div>
           </div>
            <a href="./carrinho.html"><img class="img-bag" src="./images/bag.svg"></a>

    </header>
    <main class="produto-container">
        <% produto.forEach(item => { %>
            <section class="conteudo">
                <img class="image-detalhe" src="<%= item.imagem %>">
                <section class="detalhe-container">
                    <h1 class="produto-detalhe"><%= item.nome %></h1>
                    <p class="preco-produto"><%= item.preco %></p>
                    <section class="botoes-produto">
                    <button class="btn-produto1"><a class="link-1" href="#">COMPRAR</a></button>
                    <button class="btn-produto2"><a class="link-2" href="#">ADICIONAR AO CARRINHO</a></button>
                    </section>
                <section class="texto-produto" >
                    <h3 class="sub-titulo">Detalhe do Produto</h3>
                    <p class="detalhe-texto"><%= item.detalhe %></p>
                 </section>
            </section>
        </section>
    <% }) %>
    

</main>
<%- include('./partials/footer') %>
</body>
</html>