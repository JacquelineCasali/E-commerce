<!DOCTYPE html>
<html lang="pt-br">
    <!DOCTYPE html>
    <html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>produto
             detalhe</title>
        <link rel="stylesheet" href="/stylesheets/produto-detalhe.css">
        <link rel="stylesheet" href="../stylesheets/global.css">
    </head>
<body>
<%- include('./partials/header') %>
    <main class="produto-container">
        <% produto.forEach(item => { %>
            <section class="conteudo">
                <img class="imagem-detalhe"  src="<%= item.imagem %>">
                <section class="detalhe-container">
                    <h1 class="produto-detalhe"><%= item.nome %></h1>
                    <p class="preco-produto"><%= item.preco %></p>
                    <section class="modelo">
                    <h3 class="tamanho"><%= item.tamanho %></h3>
                    <div class="botoes">
                     <div class="btn-size">P</div>
                     <div class="btn-size">M</div>
                     <div class="btn-size">G</div>
                     <div class="btn-size">GG</div>
                    </div>
                    </section>
                    <section class="texto-produto" >
                        <section class="botoes-produto">
                        <button class="btn-comprar"><a class="link-1" href="#">COMPRAR</a></button>
                        </section>
                    <h2 class="sub-titulo">Detalhe do Produto</h2>
                    <p  class="detalhe-texto"><%= item.detalhe %></p>
                </section>
                </section>
            <% }) %>
    

</main>
<%- include('./partials/footer') %>
<script src="/js/index.js"></script>
</body>
</html>